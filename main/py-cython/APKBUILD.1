pkgname=py-cython
pkgver=0.28.2
pkgrel=1
pkgdesc="Cython is an optimising static compiler for both the Python & the extended Cython programming languages."
url="http://cython.org"
arch="all"
license="Apache-2.0"
depends=""
depends_dev="python2-dev python3-dev py2-pgen py3-pgen"
makedepends="$depends_dev"
checkdepends="gdb"
subpackages="
	py2-cython:_py2 py2-cython-dev:_dev2
	py3-cython:_py3 py3-cython-dev:_dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/cython/cython/archive/$pkgver.tar.gz"
builddir="$srcdir/${pkgname#py-}-$pkgver"

build() {
	cd "$builddir"
	
	# workaround py2 api bug
	CFLAGS="${CFLAGS} -fno-strict-aliasing" \
	CXXFLAGS="${CXXFLAGS} -fno-strict-aliasing" \
	python2 setup.py build
	
	python3 setup.py build
}

check() {
	cd "$builddir"
	return 0
	
	# builtin_abs is a collection of negative tests of the form
	# int_abs(-max_int-1) expecting OverflowError but instead
	# getting an invalid result like -2147483648. Instead of
	# setting -fno-strict-overflow the tests can be disabled:
	#   -x "builtin_abs.__test__.(int_|long_)*abs"
	
	for i in 2 3; do
		CFLAGS="${CFLAGS} -fno-strict-overflow" \
		python$i \
			runtests.py \
			-vv \
			-j $JOBS \
			--work-dir "${builddir}"/tests
	done
}

package() {
	mkdir -p "$pkgdir"
}

_py2() {
	replaces="$pkgname"
	_py
}

_py3() {
	_py
	for i in "$subpkgdir"/usr/bin/*; do
		mv "$i" "${i}3"
	done
}

_py() {
	local _py=${subpkgname%-*}
	local _pyver=${_py#py}
	local _python="python$_pyver"
	
	pkgdesc="$pkgdesc (for $_python)"
	depends="$depends $_python"
	depends_dev="$depends_dev $subpkgname"
	install_if="$pkgname=$pkgver-r$pkgrel $_python"
	
	cd "$builddir"
	$_python setup.py install \
		--prefix=/usr \
		--root="$subpkgdir" \
		--optimize=1
}

_dev2() {
	replaces="cython-dev"
	_dev
}

_dev() {
	cd "${subpkgdir%-dev}"

	find -type f -iname \*.c |
	while IFS= read -r path; do
		mkdir -p "$subpkgdir/${path%/*}"
		mv "$path" "$subpkgdir/$path"
	done

	default_dev
}

